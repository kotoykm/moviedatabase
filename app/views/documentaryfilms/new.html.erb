<h1>Nuevo Documental</h1>
<p>Ingrese los datos solicitados</p>
<hr>

<%= form_with url: '/../documentaryfilms/create', model:@docu, method: :post do |form| %>
    <div class="col-4">
        <div class="mb-4 mt-4">
            <%= form.label :name, "Nombre", class: "form-label fs-5 fw-300" %>
            <%= form.text_field :name, name: "documentaryfilm[name]", class: "form-control"  %>
        </div>

        <div class="mb-4" >
            <%= form.label :synopsis, "Sinopsis", class: "form-label fs-5 fw-300" %>
            <%= form.text_field :synopsis, name: "documentaryfilm[synopsis]", class: "form-control"%>
        </div>

        <div class="mb-4" >
            <%= form.label :director, "Director", class: "form-label fs-5 fw-300" %>
            <%= form.text_field :director, name: "documentaryfilm[director]", class: "form-control" %>
        </div>

        <div class="mb-4" >
            <%=form.submit "Ingresar", class: "btn btn-light bg-indigo text-snow" %>
        </div>
    </div>
<%end%>